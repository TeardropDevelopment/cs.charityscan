            <EventItem Title="@e.title" AthletesCount="100" Distance="2.5f" LapCount="500" Location="Eggelsberg, Upper Austria" EndTime="@e.endTime" StartTime="@e.startTime" />
        </MudCarouselItem>   
    }
</MudCarousel>

